{
  "env": {
    "browser": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "plugin:prettier/recommended", "plugin:react/recommended"],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true
    }],
    "class-methods-use-this": 0,
    "linebreak-style": ["error", "unix"],
    "react/jsx-filename-extension": ["error", {
      "extensions": [".js", ".jsx"]
    }]
  }
}